---
import Sidebar from "../components/Sidebar.astro";
import type { CollectionContent } from "../content.config";
import Layout, { type LayoutProps } from "./Layout.astro";
interface Props extends LayoutProps {
	entries: CollectionContent[]
}
---

<Layout {...Astro.props}>
  <div class="max-w-7xl mx-auto px-4">
    <div class="drawer lg:drawer-open">
      <input id="sidebar-drawer" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content flex flex-col">
        <label for="sidebar-drawer" class="btn drawer-button lg:hidden">
          <i class="fa fa-list"></i>
        </label>
        <div class="p-4">
          <slot/>
        </div>
      </div>
      <div class="drawer-side z-20 h-full">
        <label for="sidebar-drawer" aria-label="close sidebar" class="drawer-overlay bg-base-200"></label>
        <Sidebar {...Astro.props} />
      </div>
    </div>
  </div>
</Layout>